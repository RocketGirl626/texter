<% content_for :title, "Text Your Mom | Send Group" %>


<div class='row'>
<div class="center-block"><%=image_tag("mom.jpg")%></div>
</div>

<div class="row">
  <div class="col-lg-12 message-display">
    <h1 class="headline">Text Your Mom</h1>
    <hr>
    <h3 class="group-moms"> Choose who you want in the text group: </h3>
    <% @contacts.each  do |contact| %>
    <div class="col-lg-4">
      <h5 class="contact-name"><span>Name: </span><%= link_to contact.name, contact_path(contact)%></h5>
    <hr>
    </div>
    <% end %>

  </div>
