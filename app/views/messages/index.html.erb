<% content_for :title, "Text Your Mom | All Your Texts to Mom" %>


<div class='row'>
<div class="center-block"><%=image_tag("mom.jpg")%></div>
</div>

<div class="row">
  <div class="col-lg-12 message-display">
    <h1 class="headline">Text Your Mom</h1>

    <% @messages.each  do |message| %>
    <div class=col-lg-3>
      <p class="message-body"><span>Message Content: </span><%= message.body %></p>
      <p class="message-to"> <span>Sent To: </span><%= message.to %> </p>
      <p class="message-to"> <span>Sent From:  </span><%= message.from %></p>
    </div>
    <% end %>
  </div>
  <button class="links left-link"><%= link_to 'Send a New Message', new_message_path, id: "new_message_link" %></button>
</row>
